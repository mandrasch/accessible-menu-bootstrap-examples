<!-- // Single Level Menu Example // -->

<div class="mb-5">
  <h2>Single Level Menu Example</h2>

  <nav id="main-nav-single-level" aria-label="Main" class="navbar navbar-light bg-light">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a href="/about" class="nav-link">About</a>
      </li>
      <li class="nav-item">
        <a href="/projects" class="nav-link">Projects</a>
      </li>
      <li class="nav-item">
        <a href="/contact" class="nav-link">Contact me</a>
      </li>
    </ul>
  </nav>
  <small class="form-text mt-2"
    >The CSS property "flex-direction: row" is added with navbar-expand-lg,therefore it is set to "column" by default,
    see next example.</small
  >

  <script type="text/javascript">
    window.addEventListener("load", function (event) {
      const menu = new AccessibleMenuBootstrap4.Bootstrap4DisclosureMenu({
        menuElement: document.querySelector("#main-nav-single-level .navbar-nav"),
      });
    });
  </script>
</div>

<!-- // Single Level Menu with Toggle Example // -->

<div class="mb-5">
